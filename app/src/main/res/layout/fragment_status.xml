<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".StatusFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/statusHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Floor B1 (-1F)"
            android:textColor="#6F37A7"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textBoxA1"
            android:layout_width="100dp"
            android:layout_height="50dp"

            android:layout_marginStart="60dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/rounded_rectangle_gray"
            android:gravity="center"
            android:text="A1"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textBoxA2"
            android:layout_width="100dp"
            android:layout_height="50dp"

            android:layout_marginTop="120dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/rounded_rectangle_gray"
            android:gravity="center"
            android:text="A2"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textBoxA3"
            android:layout_width="100dp"
            android:layout_height="50dp"


            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_rectangle_gray"
            android:gravity="center"
            android:text="A3"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBoxA1" />

        <TextView
            android:id="@+id/textBoxA4"
            android:layout_width="100dp"
            android:layout_height="50dp"


            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/rounded_rectangle_gray"
            android:gravity="center"
            android:text="A4"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBoxA2" />

        <TextView
            android:id="@+id/textBoxA5"
            android:layout_width="100dp"
            android:layout_height="50dp"


            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_rectangle_gray"
            android:gravity="center"
            android:text="A5"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBoxA3" />

        <TextView
            android:id="@+id/textBoxA6"
            android:layout_width="100dp"
            android:layout_height="50dp"

            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/rounded_rectangle_gray"
            android:gravity="center"
            android:text="A6"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBoxA4" />

        <TextView
            android:id="@+id/textBoxA7"
            android:layout_width="100dp"
            android:layout_height="50dp"

            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_rectangle_gray"
            android:gravity="center"
            android:text="A7"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBoxA5" />

        <TextView
            android:id="@+id/textBoxA8"
            android:layout_width="100dp"
            android:layout_height="50dp"

            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/rounded_rectangle_gray"
            android:gravity="center"
            android:text="A8"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBoxA6" />

        <TextView
            android:id="@+id/textBoxA9"
            android:layout_width="100dp"
            android:layout_height="50dp"

            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_rectangle_gray"
            android:gravity="center"
            android:text="A9"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBoxA7" />

        <TextView
            android:id="@+id/textBoxA10"
            android:layout_width="100dp"
            android:layout_height="50dp"

            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/rounded_rectangle_gray"
            android:gravity="center"
            android:text="A10"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBoxA8" />

        <TextView
            android:id="@+id/textBoxCommentGray"
            android:layout_width="70dp"
            android:layout_height="35dp"

            android:layout_marginStart="90dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_rectangle_gray"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Note" />

        <TextView
            android:id="@+id/textBoxCommentRed"
            android:layout_width="70dp"
            android:layout_height="35dp"

            android:layout_marginStart="90dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_rectangle_red"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBoxCommentGray" />

        <TextView
            android:id="@+id/Note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Note"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBoxA10" />

        <TextView
            android:id="@+id/grayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="27dp"
            android:layout_marginEnd="96dp"
            android:gravity="center"
            android:text="Empty Slot"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Note" />

        <TextView
            android:id="@+id/redLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="23dp"
            android:layout_marginEnd="70dp"
            android:gravity="center"
            android:text="Reserved Slot"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/grayLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>